{% extends 'master.twig' %}

{%- block stylesheets %}

    {{parent()}}
    <link rel="stylesheet" href="{{ paths.theme }}css/simpleforms.css" />

{% endblock stylesheets %}

{% block bodyclass %}
	index
{% endblock bodyclass %}

{% block main %}

	{% if record.image is not empty %}
		<div class="image featured">
			<img src="{{ image(record.image) }}"/>
		</div>
	{% endif %}

	<article id="main">

		<section class="wrapper style1 container special">
			<div class="row">
				<div class="6u -3u">
					<section>
						<span class="icon fa-envelope"></span>
						<header>
							<h2>{{ record.title }}</h2>
						</header>
						{{ record.body }}
					</section>
				</div>
			</div>
		</section>

		<section class="wrapper style1 container special contact-form">
			<div class="row">
				<div class="6u">
					<section>
						<header>
							<h2>Contact Info</h2>
						</header>
						<div class="row">
							<div class="10u -2u">
								<ul>
									<li><span id="email" class="icon fa-envelope-square"></span>{{ record.email }}</li>
									<li><span id="phone" class="icon fa-phone-square"></span>{{ record.telephone }}</li>
									<li><span id="address" class="icon fa-map-marker"></span>&nbsp;&nbsp;{{ record.address }}</li>
								</ul>
							</div>
						</div>

						<br/>
						<div class="google-maps">

							<iframe width="350" height="200" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place
							?key=AIzaSyBk9E0y4S62haM7XxXbdW2QSS22NEFut_g
							&q={{ record.address }}
							"></iframe>
						</div>
					</section>
				</div>
				<div class="5u">

					<section>
						<header>
							<h2>Send us your message</h2>
						</header>
						<div id="contact-form" class="content">
							{{ simpleform('contact') }}
						</div>
					</section>

				</div>
			</div>
		</section>

	</article>
{% endblock main %}
