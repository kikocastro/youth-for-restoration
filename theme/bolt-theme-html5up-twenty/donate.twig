{% extends 'master.twig' %}

{# TODO: fix class #}
{% block bodyclass %}
  index
{% endblock bodyclass %}

{% block main %}

  <div class="image featured">
    <img src="{{ image(record.image) }}"/>
  </div>

  <article id="main">
    <section class="wrapper style1 container special">
      <div class="row">
        <div class="6u -3u">
          <section>
            <header>
              <span class="icon fa-heart"></span>
              <h2>Ways to give</h2>
            </header>
            {{ record.ways_give }}
          </section>
        </div>
      </div>
    </section>

    <section class="wrapper style2 container special">
      <div class="row">
        <div class="4u -1u">
          <span class="icon fa-check"></span>
          <header>
            <h2>Donate Online</h2>
          </header>
          <p>
            {{ record.donate_online }}
          </p>
          <br/>
          <div class="paypal">
            <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_blank">
              <input type="hidden" name="cmd" value="_s-xclick">
              <input type="hidden" name="hosted_button_id" value="AZL39D9VDZHHW">
              <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!" width="170" >
              <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
            </form>
          </div>
        </div>
        <div class="5u -2u">
          <span class="icon fa-check"></span>
          <header>
            <h2>Donate by Mail</h2>
          </header>
          <p>
            {{ record.donate_mail }}
          </p>
        </div>
      </div>
    </section>

    <section class="wrapper style1 container special">
      <div class="row">
        <div class="8u -2u">
          <section>
            <p>
              {{ record.org_registration }}
            </p>
          </section>
        </div>
      </div>
    </section>

    <section class="wrapper style1 container special">
      <div class="row">
        <div class="8u -2u">
          <section>
            <header>
              <h2>Become a sponsor</h2>
            </header>
            <p>
              {{ record.become_sponsor }}
            </p>
            <a href="contact" class="button special">Send us an email</a>
          </section>
        </div>
      </div>
    </section>


  </article>

{% endblock main %}
